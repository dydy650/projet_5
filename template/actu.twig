{% extends 'layout.html.twig' %}

{% block title %}
   Actualités
{% endblock %}
{% block welcomeUser %}
    Voici votre actualité
{% endblock %}
{% block navbar %}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-8">
                <div class="mainContent">
                    {% for post in posts %}
                    <div class="singlePost">
                        <p class="postCategory">{{ post.category.NameCategory }}</p>
                        <p class="postUsername">{{ post.username }}</p>
                        <p class="postDateAt"> {{ post.postAt }}</p>
                        <p class="postContent">{{ post.content }}</p>
                    </div><br/>

                    <div class="commentPart">
                        <p><label class="titleCommentPart" for="comment"> Voir les commentaires</label></p>
                        <div class="listcommentsPart">
                            {% for comment in post.comments %}
                                <div class="comments">
                                    {{ comment.username }} <p>le {{ comment.commentAt }}</p>
                                    -->
                                    {{ comment.content }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="writeCommentPart">
                            <form action="index.php?action=addComment&amp;id={{ post.id }}" method="post">
                                <label for="contentNewComment"></label><br/>
                                <textarea class="form-control" id="contentNewComment" name="contentNewComment" placeholder="Votre commentaire"></textarea><br>
                                <input class="btn btn-outline-secondary" id="btnNewComment" type="submit" value="partager"/>
                            </form>
                        </div>
                    </div>
                       <!--{# {% if post.username === "lucie" %}#}
                        <a href="index.php?action=editPost{{ post.id }}>"
                           id="btnAdminEdit" class="btn btn-light"> Modifier</a>
                        <a href="index.php?action=deletePost{{ post.id }}>"
                           id="btnAdminDelete" class="btn btn-light"> Supprimer </a>-->
                     <div class="postSeparation"></div>
                    {% endfor %}
            </div>

        </div>

        <div class="col-6 col-md-4">
            <div class="secondContent">
                <div class="meteoPart">
                    <h1>METEO</h1>
                </div>
                <div class="categoryCloud">
                    <h1>categories</h1>
                </div>
                <div class="parrainagePart">
                    <h1>parrainage</h1>
                </div>
            </div>
        </div>

    </div>

{% endblock %}