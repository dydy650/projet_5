{% extends 'layout.html.twig' %}

{% block title %}
   Categories
{% endblock %}

{% block content %}

    <div class="row">

 {% for category in categories %}
        <div class="col-12 col-md-6 col-lg-3">
            <div class="portfolio-content">
                <figure>
                    <div class="square1"><h3><a href="index.php?action=category&id={{ category.idCategory }}&page={{ page }}" class="titleCategory">{{ category.nameCategory }}</a></h3>
                        <span style="font-size: 50px; color: #000000;">
                            {{ category.icone|raw }}
                        </span>
                    </div>
                </figure>

            </div><!-- .portfolio-content -->
        </div><!-- .col -->
{% endfor %}

    </div><!-- .row -->
{% endblock %}