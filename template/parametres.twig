{% extends 'layout.html.twig' %}

{% block title %}
    Parametres
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12 col-sm-6 col-lg-8" id="parametresInfos">
            <h1>Parametres</h1>
            <div class="mainContent">
                <div id="avatar">
                    {% if existFile %}
                        <img alt="profil" id="profil" src='{{ filename }}?v={{ timestamp }}'>
                    {% else %}
                        <span style="font-size: 60px; color: white;">
                            <i class="fas fa-user"></i>
                            <img alt="coco" id="coco" src="public\img\coco.png">
                        </span>
                    {% endif %}

                </div>
                <div id="imgAvatar">
                    <form action="index.php?action=uploadFichier" method="post" enctype="multipart/form-data">
                        <p>
                            <input class="buttonImg" type="file" name="monfichier" /><br>
                            <input class="buttonImg" type="submit" value="Charger une photo de profil" />
                        </p>
                    </form>
                </div>

                <h2 class="titleParameters">Général </h2> <a href="index.php?action=editUserInfo&id={{ user.id }}" ><i id="pencilEdit" class="fas fa-pencil-alt"></i></a>
                <div class="contentParameters">

                    <h6>NOM : </h6> <p>{{ user.nom }}</p>
                    <h6>PRENOM : </h6> <p>{{ user.prenom }}</p>
                    <h6>DATE DE NAISSANCE : </h6> <p> {{ user.birthday_date_FR }} </p>
                    <h6>VILLE : </h6><p> {{ user.city }}</p>
                    <h6>Parraines de nouvelles pépites avec le code suivant
                    CODE PARRAINAGE  : </h6><p>{{ user.codeParrainagePerso }}</p>
                </div>

                <h2 class="titleParameters">Connexion</h2><a href="index.php?action=editUserConnexion&id={{ user.id }}" ><i id="pencilEdit2" class="fas fa-pencil-alt"></i></a>
                <div class="contentParameters">
                    <p>EMAIL : {{ user.email }}</p>
                    <p>IDENTIFIANT : {{ user.username }}</p>
                    <p>MOT DE PASSE : {{ user.password }}</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="secondContent">

            </div>
        </div>


    </div>


{% endblock %}